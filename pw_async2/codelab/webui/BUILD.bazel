load("@aspect_rules_js//js:defs.bzl", "js_run_binary")

package(default_visibility = ["//pw_async2/codelab:__subpackages__"])

licenses(["notice"])

# Bundle the web app using Rollup
js_run_binary(
    name = "webui_js",
    srcs = [
        "rollup.config.js",
        "tsconfig.json",
        "www/main.ts",
        "//:node_modules",
    ],
    outs = ["www/main.js"],
    args = [
        "-c",
        "rollup.config.js",
    ],
    chdir = package_name(),
    tool = "//:rollup_bin",
    visibility = ["//visibility:private"],
)
