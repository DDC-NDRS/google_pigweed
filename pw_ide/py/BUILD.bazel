load("@rules_platform//platform_data:defs.bzl", "platform_data")
load("@rules_python//python:defs.bzl", "py_library")
load("//pw_build:pw_py_importable_runfile.bzl", "pw_py_importable_runfile")
load("//pw_build:python.bzl", "pw_py_binary", "pw_py_test")

package(default_visibility = ["//visibility:public"])

py_library(
    name = "pw_ide",
    srcs = [
        "pw_ide/__init__.py",
        "pw_ide/activate.py",
        "pw_ide/cli.py",
        "pw_ide/commands.py",
        "pw_ide/cpp.py",
        "pw_ide/editors.py",
        "pw_ide/exceptions.py",
        "pw_ide/merger.py",
        "pw_ide/python.py",
        "pw_ide/settings.py",
        "pw_ide/symlinks.py",
        "pw_ide/vscode.py",
    ],
    data = [
        "pw_ide/py.typed",
    ],
    imports = ["."],
    deps = [
        "//pw_cli/py:pw_cli",
        "//pw_config_loader/py:pw_config_loader",
        "@pigweed_python_packages//json5",
        "@pigweed_python_packages//pyyaml",
    ],
)

py_library(
    name = "compile_commands_generator",
    srcs = ["pw_ide/compile_commands_generator.py"],
    imports = ["."],
    deps = ["@pigweed_python_packages//json5"],
)

pw_py_binary(
    name = "compile_commands_generator_binary_internal",
    srcs = ["pw_ide/compile_commands_generator.py"],
    main = "pw_ide/compile_commands_generator.py",
    deps = [
        ":compile_commands_generator",
        "@pigweed_python_packages//json5",
    ],
)

# We wrap our binary here to always build it for host_platform
# regardless of the config passed to it.
platform_data(
    name = "compile_commands_generator_binary",
    platform = "@bazel_tools//tools:host_platform",
    target = ":compile_commands_generator_binary_internal",
)

pw_py_binary(
    name = "bazel_canonicalize_args",
    srcs = ["pw_ide/bazel_canonicalize_args.py"],
    main = "pw_ide/bazel_canonicalize_args.py",
    deps = [
        ":compile_commands_generator",
    ],
)

pw_py_binary(
    name = "pw_ide_cli",
    srcs = ["pw_ide/__main__.py"],
    main = "pw_ide/__main__.py",
    deps = [
        ":pw_ide",
    ],
)

pw_py_test(
    name = "commands_test",
    size = "small",
    srcs = [
        "commands_test.py",
        "test_cases.py",
    ],
    deps = [":pw_ide"],
)

pw_py_test(
    name = "cpp_test",
    size = "small",
    srcs = [
        "cpp_test.py",
        "test_cases.py",
    ],
    deps = [":pw_ide"],
)

pw_py_test(
    name = "cpp_test_fake_env",
    size = "small",
    srcs = ["cpp_test_fake_env.py"],
    deps = [":pw_ide"],
)

pw_py_test(
    name = "editors_test",
    size = "small",
    srcs = [
        "editors_test.py",
        "test_cases.py",
    ],
    deps = [":pw_ide"],
)

pw_py_test(
    name = "vscode_test",
    size = "small",
    srcs = [
        "test_cases.py",
        "vscode_test.py",
    ],
    deps = [":pw_ide"],
)

pw_py_test(
    name = "compile_commands_generator_test",
    size = "small",
    srcs = ["compile_commands_generator_test.py"],
    deps = [
        ":compile_commands_generator",
        ":pw_ide",
    ],
)

pw_py_test(
    name = "activate_tests",
    srcs = [
        "activate_tests.py",
        "test_cases.py",
    ],
    deps = [":pw_ide"],
)

pw_py_binary(
    name = "update_compile_commands",
    srcs = ["pw_ide/merger.py"],
    main = "pw_ide/merger.py",
    deps = ["//pw_cli/py:pw_cli"],
)

pw_py_binary(
    name = "clean_compile_commands",
    srcs = ["pw_ide/cleaner.py"],
    main = "pw_ide/cleaner.py",
)

pw_py_test(
    name = "merger_test",
    srcs = ["merger_test.py"],
    deps = [
        ":pw_ide",
        "@pigweed_python_packages//pyfakefs",
    ],
)

# For testing, do not increase visibility.
pw_py_importable_runfile(
    name = "clangd_binary",
    testonly = True,
    src = "@llvm_toolchain//:bin/clangd",
    executable = True,
    import_location = "pw_ide.clangd_binary",
    tags = ["manual"],
    visibility = ["//visibility:private"],
)

# For testing, do not increase visibility.
pw_py_importable_runfile(
    name = "update_compile_commands_binary",
    testonly = True,
    src = "//pw_ide/bazel:update_compile_commands",
    executable = True,
    import_location = "pw_ide.update_compile_commands_binary",
    tags = ["manual"],
    visibility = ["//visibility:private"],
)

pw_py_binary(
    name = "integration_test",
    testonly = True,
    srcs = ["integration_test.py"],
    data = [
        # Ensure compile commands are always available.
        "//pw_ide/bazel/compile_commands/test:test_compile_commands",
        # Ensure generated files exist.
        "//pw_ide/bazel/compile_commands/test:test_compile_commands_outputs",
    ],
    deps = [
        ":clangd_binary",
        ":update_compile_commands_binary",
    ],
)

pw_py_binary(
    name = "performance_test",
    testonly = True,
    srcs = ["performance_test.py"],
    data = [
        # Ensure compile commands are always available.
        "//pw_ide/bazel/compile_commands/test:test_compile_commands",
        # Ensure generated files exist.
        "//pw_ide/bazel/compile_commands/test:test_compile_commands_outputs",
        # This is used because we need something with a LOT of dependencies for
        # performance regression testing.
        "//pw_system:rp2040_system_example",
    ],
    deps = [
        ":update_compile_commands_binary",
    ],
)
