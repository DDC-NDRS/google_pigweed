# Java wrapper around pw_tokenizer's Detokenizer class.
load("//java/com/google/devtools/staticanalysis/java/checker:build_defs.bzl", "android_library_with_nullness_check")

package(
    default_applicable_licenses = ["//third_party/pigweed/pigweed:license"],
)

android_library_with_nullness_check(
    name = "detokenizer_android",
    srcs = ["Detokenizer.java"],
    visibility = ["//visibility:public"],
    deps = [
        "//third_party/java/android_libs/guava_jdk5",
        "//third_party/java/jsr305_annotations",
        "//third_party/pigweed/pigweed/pw_tokenizer/java_jni/src/main/native/dev/pigweed/pw_tokenizer:native_android",
    ],
)

# Provide non-Android alias for DetokenizerTest.java.
alias(
    name = "detokenizer",
    actual = ":detokenizer_android",
    visibility = ["//third_party/pigweed/pigweed/pw_tokenizer/java_jni/src/test/java/dev/pigweed/pw_tokenizer:__pkg__"],
)
