load("//mobile/build:build_defs.bzl", "android_jni_library")
load("//third_party/bazel_rules/rules_cc/cc:cc_library.bzl", "cc_library")

android_jni_library(
    name = "native_android",
    binary_name = "libpw_tokenizer_jni.so",
    tags = ["keep_dep"],
    visibility = ["//third_party/pigweed/pigweed/pw_tokenizer/java_jni/src/main/java/dev/pigweed/pw_tokenizer:__pkg__"],
    deps = [":detokenizer_jni"],
)

cc_library(
    name = "detokenizer_jni",
    srcs = ["detokenizer.cc"],
    deps = [
        "//third_party/fuchsia_pigweed:stdcompat",
        "//third_party/java/jdk:jni",
        "//third_party/pigweed/pigweed/pw_span",
        "//third_party/pigweed/pigweed/pw_tokenizer:decoder",
    ],
    alwayslink = 1,
)
