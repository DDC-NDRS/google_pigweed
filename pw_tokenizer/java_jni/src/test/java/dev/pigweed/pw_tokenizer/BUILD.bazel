load("@rules_java//java:defs.bzl", "java_test")
load("//pw_build:compatibility.bzl", "incompatible_with_mcu")

java_test(
    name = "DetokenizerTest",
    size = "small",
    srcs = ["DetokenizerTest.java"],
    tags = [
        # Tag with "jni" to exclude by default, since rules_jni doesn't properly
        # handle target_compatible_with.
        # TODO: b/442722000 - Remove tag when target_compatible_with works.
        "jni",
        # Sanitizers do not work properly with JNI. Test runs fail with linking
        # errors for sanitizer-related functions.
        "noasan",
        "nomsan",
        "notsan",
    ],
    target_compatible_with = incompatible_with_mcu(),
    test_class = "dev.pigweed.pw_tokenizer.DetokenizerTest",
    deps = [
        "//pw_tokenizer/java_jni/src/main/java/dev/pigweed/pw_tokenizer:detokenizer",
        "@pigweed_maven_deps//:com_google_truth_truth",
    ],
)
