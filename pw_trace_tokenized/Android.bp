package {
    default_applicable_licenses: ["external_pigweed_license"],
}

cc_library {
    name: "pw_trace",
    defaults: [
        "pw_android_common_backends",
        "pw_android_common_target_support",
    ],
    export_include_dirs: ["public"],

    header_libs: [
        "pw_assert",
        "pw_log",
        "pw_trace_headers",
    ],
    export_header_lib_headers: [
        "pw_assert",
        "pw_log",
    ],
    static_libs: [
        "pw_base64",
        "pw_containers",
        "pw_preprocessor",
        "pw_span",
        "pw_tokenizer",
        "pw_tokenizer_base64",
        "pw_varint",
    ],
    export_static_lib_headers: [
        "pw_base64",
        "pw_containers",
        "pw_preprocessor",
        "pw_span",
        "pw_tokenizer",
        "pw_tokenizer_base64",
    ],
    local_include_dirs: [
        "public_overrides",
    ],
    srcs: [
        "trace.cc",
        "host_trace_time.cc",
    ],
}

filegroup {
    name: "pw_trace_proto_src",
    srcs: [
        "pw_trace_protos/trace_service.proto",
        ":pw_chrono_protos",
        ":pw_tokenizer_proto_options_proto",
        ":libprotobuf-internal-protos",
    ],
}

genrule {
    name: "pw_trace_pwpb_rpc_header",
    defaults: ["pw_rpc_generate_rpc_pwpb_header_with_prefix_and_protobuf"],
    srcs: [":pw_trace_proto_src"],
    out: [
        "pw_trace_protos/trace_service.rpc.pwpb.h",
    ],
}

genrule {
    name: "pw_trace_pwpb_proto_header",
    defaults: ["pw_rpc_generate_pwpb_header_with_prefix_and_protobuf"],
    srcs: [":pw_trace_proto_src"],
    out: ["pw_trace_protos/trace_service.pwpb.h"],
}

cc_library_headers {
    name: "pw_trace_pwpb",
    cpp_std: "c++20",
    vendor_available: true,
    host_supported: true,
    generated_headers: [
        "pw_trace_pwpb_proto_header",
        "pw_trace_pwpb_rpc_header",
    ],
    export_generated_headers: [
        "pw_trace_pwpb_proto_header",
        "pw_trace_pwpb_rpc_header",
    ],
}

cc_library {
    name: "pw_trace_decoder",
    defaults: [
        "pw_android_common_backends",
        "pw_android_common_target_support",
    ],
    export_include_dirs: [
        "public",
    ],
    srcs: [
        "decoder.cc",
    ],
    header_libs: [
        "fuchsia_sdk_lib_stdcompat",
        "pw_log",
    ],
    static_libs: [
        "pw_bytes",
        "pw_detokenizer",
        "pw_elf_reader",
        "pw_result",
        "pw_status",
        "pw_stream",
        "pw_string",
        "pw_tokenizer",
        "pw_varint",
        "pw_base64",
    ],
}
